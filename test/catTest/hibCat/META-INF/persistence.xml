<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
   version="1.0">
   <persistence-unit name="simpleCatalog">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <!--<jta-data-source>java:/DefaultDS</jta-data-source>-->
      <class>jpaCat.SimpleCategory</class>
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
         <!--<property name="hibernate.hbm2ddl.auto" value="create-drop"/>-->

         <property name="hibernate.connection.provider_class"
                      value="org.hibernate.connection.C3P0ConnectionProvider" />

                   <!--<property name="hibernate.show_sql" value="true"/>-->
         <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
         <property name="hibernate.connection.username" value="dmfl"/>
         <property name="hibernate.connection.password" value="gregsbirthday"/>
         <property name="hibernate.connection.url" value="jdbc:mysql://localhost/simpleCatalog"/>
         <property name="hibernate.max_fetch_depth" value="1"/>

         <property name="hibernate.cache.provider_class" value="net.sf.ehcache.hibernate.SingletonEhCacheProvider" />
         <property name="net.sf.ehcache.configurationResourceName" value="/ehcache.xml" />
         <property name="hibernate.cache.use_query_cache" value="true" />
         <property name="hibernate.cache.use_second_level_cache" value="true" />
         <property name="hibernate.generate_statistics" value="false" />
      </properties>
   </persistence-unit>
</persistence>
