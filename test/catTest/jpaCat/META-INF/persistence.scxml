<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	     version="1.0">
  <persistence-unit name="simpleCatalog">
    <class>jpaCat.SimpleCategory</class>
    <properties>
       <!--<property name="openjpa.Log" value="DefaultLevel=TRACE, Tool=INFO"/>-->
       <property name="openjpa.Log" value="DefaultLevel=WARN, Tool=INFO"/>
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>

      <property name="openjpa.RemoteCommitProvider" value="sjvm"/>
      <property name="openjpa.DataCache" value="true(CacheSize=<%= CacheTest.itemCacheSize%>, SoftReferenceSize=0)"/>
      <property name="openjpa.QueryCache" value="true(CacheSize=<%= CacheTest.queryCacheSize%>, SoftReferenceSize=0)"/>

